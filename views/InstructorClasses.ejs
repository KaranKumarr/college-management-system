<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="/assets/index.css">
    <link rel="stylesheet" href="/assets/Navbar.css">
    <link rel="stylesheet" href="/assets/Classes.css">
</head>

<body>

    <%- include("./partials/InstructorNavbar.ejs") %>

        <section class="Classes">

            <h1 class="Classes-Heading">Classes Of <%=CourseName%>
            </h1>

            <% if(dates.length> 0){ %>

                <%dates.forEach((date,i)=>{%>
                    <div class="Classes-Box">
                        <h5>Class Date: <%=date%>
                        </h5>
                        <button onclick="getAttendance(<%=i%>)">Attendance</button>
                    </div>
                    <%});%>
                        <%} else{ %>

                            <div class="Classes-Box">
                                <h5>Sorry, There has been no classes yet</h5>
                            </div>
                            <%}%>
                                <button onclick="addAttendance(<%=CourseID%>)">Add New Attendance</button>
        </section>

        <script>

            const getAttendance = (day) => {

                window.location.href = window.location.href + "/" + day;

            }
            const addAttendance = (CourseID) => {

                window.location.href = '/Add/Attendance/' + CourseID;

            }


        </script>

</body>

</html>